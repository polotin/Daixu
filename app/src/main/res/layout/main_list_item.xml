<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/divider">

    <TextView
        android:id="@+id/id_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_content" />

    <TextView
        android:id="@+id/id_tv_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_location" />

    <TextView
        android:id="@+id/id_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_hours" />

    <TextView
        android:id="@+id/id_tv_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_date" />

    <Button
        android:id="@+id/id_btn_edit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/id_btn_start"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_start"
        android:text="编辑"/>


    <Button
        android:id="@+id/id_btn_start"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/id_btn_edit"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_start"
        android:text="开始"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f4f4f4"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_start" />

</androidx.constraintlayout.widget.ConstraintLayout>