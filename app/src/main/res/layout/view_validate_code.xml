<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_validation_1"
            style="@style/validationCodeStyle" />

        <View
            android:layout_width="@dimen/tv_validation_code_width"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@id/tv_validation_1"
            app:layout_constraintTop_toBottomOf="@id/tv_validation_1" />

        <TextView
            android:id="@+id/tv_validation_2"
            style="@style/validationCodeStyle"
            android:layout_marginLeft="@dimen/tv_validation_code_gap"
            app:layout_constraintLeft_toRightOf="@id/tv_validation_1" />

        <View
            android:layout_width="@dimen/tv_validation_code_width"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@id/tv_validation_2"
            app:layout_constraintTop_toBottomOf="@id/tv_validation_2" />

        <TextView
            android:id="@+id/tv_validation_3"
            style="@style/validationCodeStyle"
            android:layout_marginLeft="@dimen/tv_validation_code_gap"
            app:layout_constraintLeft_toRightOf="@id/tv_validation_2" />

        <View
            android:layout_width="@dimen/tv_validation_code_width"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@id/tv_validation_3"
            app:layout_constraintTop_toBottomOf="@id/tv_validation_3" />

        <TextView
            android:id="@+id/tv_validation_4"
            style="@style/validationCodeStyle"
            android:layout_marginLeft="@dimen/tv_validation_code_gap"
            app:layout_constraintLeft_toRightOf="@id/tv_validation_3" />

        <View
            android:layout_width="@dimen/tv_validation_code_width"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@id/tv_validation_4"
            app:layout_constraintTop_toBottomOf="@id/tv_validation_4" />

        <TextView
            android:id="@+id/tv_validation_5"
            style="@style/validationCodeStyle"
            android:layout_marginLeft="@dimen/tv_validation_code_gap"
            app:layout_constraintLeft_toRightOf="@id/tv_validation_4" />

        <View
            android:layout_width="@dimen/tv_validation_code_width"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@id/tv_validation_5"
            app:layout_constraintTop_toBottomOf="@id/tv_validation_5" />

        <TextView
            android:id="@+id/tv_validation_6"
            style="@style/validationCodeStyle"
            android:layout_marginLeft="@dimen/tv_validation_code_gap"
            app:layout_constraintLeft_toRightOf="@id/tv_validation_5" />

        <View
            android:layout_width="@dimen/tv_validation_code_width"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="@id/tv_validation_6"
            app:layout_constraintTop_toBottomOf="@id/tv_validation_6" />

        <com.polotin.daixu.CustomView.ValidationEditText
            android:id="@+id/et_validation"
            android:layout_width="0dp"
            android:layout_height="@dimen/tv_validation_code_height"
            android:background="@color/transparent"
            android:textColor="@color/transparent"
            android:inputType="number"
            android:longClickable="false"
            android:maxLength="6"
            android:singleLine="true"
            app:layout_constraintLeft_toLeftOf="@id/tv_validation_1"
            app:layout_constraintRight_toRightOf="@id/tv_validation_6" />
</androidx.constraintlayout.widget.ConstraintLayout>